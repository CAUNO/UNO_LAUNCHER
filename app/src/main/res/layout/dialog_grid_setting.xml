<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/rg_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checkedButton="@+id/rb_grid1"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rb_grid1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:text="@string/grid1"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/rb_grid2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:text="@string/grid2"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/rb_grid3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:text="@string/grid3"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/rb_grid4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:text="@string/grid4"
            android:textSize="20sp" />
    </RadioGroup>
</LinearLayout>